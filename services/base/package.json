{
  "name": "@api/base",
  "version": "0.0.0",
  "description": "This is base service",
  "author": {
    "name": "Felix Nguyen",
    "email": "im.felixng@gmail.com"
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"@/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.7.3",
    "@grpc/proto-loader": "^0.7.3",
    "@nestjs/common": "^9.2.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/cqrs": "^9.0.1",
    "@nestjs/microservices": "^9.2.0",
    "@nestjs/mongoose": "9.2.0",
    "@nestjs/platform-express": "^9.2.0",
    "@sentry/node": "^7.16.0",
    "@topexam/api.lib.common": "^0.0.107",
    "@topexam/api.service.proto": "^0.0.40",
    "@topthithu/nest-eventstore": "^0.0.5",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.3",
    "lodash.uniqby": "^4.7.0",
    "mongoose": "6.13.0",
    "mongoose-autopopulate": "^0.16.1",
    "mongoose-delete": "^0.5.4",
    "nest-raven": "^9.0.0",
    "nestjs-minio": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.0",
    "@types/jest": "29.2.0",
    "@types/mongoose-delete": "^0.5.9",
    "@types/node": "^18.11.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "eslint": "8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "29.2.1",
    "prettier": "^2.7.1",
    "supertest": "^6.3.0",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "mongoose": "^6.6.5",
    "@sentry/hub": "^7.16.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}